<h1>Authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th>Actions</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td>
        <%= link_to 'Show', author_path(author) %>
        <%= link_to 'Destroy', author_path(author), method: :delete, data: {confirm: 'Are you sure?'} %>
        <%= link_to 'Edit', edit_author_path(author) %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add author', new_author_path %>
