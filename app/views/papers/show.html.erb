<h1>Paper: <%= @paper.title %></h1>

<p>
  <strong>Title:</strong>
  <%= @paper.title %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @paper.venue %>
</p>

<p>
  <strong>Year:</strong>
  <%= @paper.year.to_s %>
</p>

<p>
  <strong>Authors:</strong>
  <ul>
    <% @paper.authors.each do |author| %>
        <li><%= author.name %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_paper_path(@paper) %>
<%= link_to 'Destroy', paper_path(@paper), method: :delete, data: {confirm: 'Are you sure?'} %>
<%= link_to 'Back', papers_path %>
