<%= form_for @paper do |f| %>
    <% if @paper.errors.any? %>
        <div id="errors">
          <h2>
            <%= pluralize(@paper.errors.count, 'error') %> detected:
          </h2>
          <ul>
            <% @paper.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :venue %><br/>
      <%= f.text_field :venue %>
    </p>
    <p>
      <%= f.label :year %><br/>
      <%= f.text_field :year %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
